{
  "hosting": {
    "public": "public",
    "headers": [
      {
        "source": "/bundle.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-store"
          }
        ]
      }
    ],
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "!{/js,/css}/**",
        "destination": "/index.html"
      }
    ]
  }
}
